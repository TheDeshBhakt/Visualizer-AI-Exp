    "# Sample data\n",
    "data = px.data.gapminder().query('year == 2007')\n",
    "\n",
    "# Create a bubble chart\n",
    "fig = px.scatter(data, x='gdpPercap', y='lifeExp', size='pop', color='continent', hover_name='country', log_x=True, size_max=60)\n",
    "fig.show()"
